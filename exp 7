nano ansible.yml:
---
- name: Install and run nginx on localhost
  hosts: localhost
  become: yes
  tasks:
    - name: Install nginx
      apt:
        name: nginx
        state: present
        update_cache: yes

    - name: Copy custom index.html
      copy:
        src: index.html
        dest: /var/www/html/index.html
        owner: www-data
        group: www-data
        mode: '0644'

    - name: Start nginx service
      service:
        name: nginx
        state: started
        enabled: yes






ansible-playbook -i hosts.ini ansible.yml --ask-become-pass3
